{
    "name": "Flixtor Scrobbler for Trakt",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "https://api.trakt.tv/*/"
    ],
    "content_scripts": [{
        "matches": ["*://flixtor.to/watch/tv/*"],
        "js": ["content.js"]
    }],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Flixtor Scrobbler for Trakt"
    }

}